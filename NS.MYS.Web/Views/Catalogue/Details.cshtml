@model NS.MYS.Web.Models.Catalogue

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalle</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Observation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Observation)
        </dd>

    </dl>
    <dl>
        <dt>
            Fotos cargadas:
        </dt>
        <dd>
            <ul class="list-unstyled">
                @foreach (var item in Model.Photos)
                {
                    <li class="col-md-4"><img src="/UploadedFiles/@item.PhotoId" alt="" width="280" height="280" /><div class="help-block"></div></li>
                }
            </ul>
        </dd>
    </dl>
</div>
<p>
    @*TODO: se ve feo el footer*@
    @Html.ActionLink("Editar", "Edit", new { id = Model.CatalogueId }) |
    @Html.ActionLink("Regresar", "Index")
</p>
