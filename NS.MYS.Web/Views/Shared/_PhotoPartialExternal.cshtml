
@if (ViewBag.Photos != null)
{
    foreach (var item in ViewBag.Photos)
    {
        <li class="col-md-4">
            @if (ViewBag.EliminaPhoto == true)
            {<a href="#" onclick="f1('@item.PhotoId'); return false;">x</a>}

            @if (HttpContext.Current.IsDebuggingEnabled)
            {
                <a rel="lightbox[portfolio]" href="/UploadedFiles/@item.PhotoId">
                    <img class="border border-dark" src="/UploadedFiles/@item.PhotoId" alt="@item.Description" width="280" height="280" />
                </a>
            }
            else
            {
                <img class="border border-dark" src="/sicweb/UploadedFiles/@item.PhotoId" alt="@item.Description" width="280" height="280" />
            }
            <div class="help-block"></div>
        </li>
    }

}